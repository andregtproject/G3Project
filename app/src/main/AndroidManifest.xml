        <activity
            android:name=".MainActivity2"
            android:theme="@style/Theme.NoActionBar" >
        </activity>
        <activity
            android:name=".Settings.SettingsActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Settings.Help" />
        <activity android:name=".Settings.TermsConditions" />
        <activity android:name=".Settings.PrivacyPolicy" />
        <activity android:name=".Settings.about_us" />
        <activity
            android:name=".Tools.IndexBadan"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Splash"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".Tools.CurrencyConverter"
            android:parentActivityName=".MainActivity" />
        <activity
