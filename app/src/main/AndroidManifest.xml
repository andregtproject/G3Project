        <activity
            android:name=".Tools.QR_Generator"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Helper.GN_CodeOption"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Tools.SpeechText"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Tools.TextRecognition"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Tools.Discount"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.G3Project" />

        <meta-data
            android:name="preloaded_fonts"
